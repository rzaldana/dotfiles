{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": [
        "terraform",
	"tf"
      ],
      "initializationOptions": {},
      "settings": {} 
    }
  },
  "diagnostic": {
    "checkCurrentLine": false
  },
  "pyright": {
    "enable": true,
    "inlayHints": {
      "functionReturnTypes": false,
      "variableTypes": false,
      "parameterTypes": false
    }
  }
}
