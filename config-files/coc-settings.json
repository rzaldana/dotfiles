{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": [
        "terraform", "tf"
      ],
      "initializationOptions": {},
      "settings": {} 
    },
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.work", "go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
  }
  },
  "diagnostic": {
    "checkCurrentLine": true
  },
  "pyright": {
    "enable": true,
    "inlayHints": {
      "functionReturnTypes": false,
      "variableTypes": false,
      "parameterTypes": false
    }
  }
}
